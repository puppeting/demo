<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="helper"
            type="com.chad.library.adapter.base.viewholder.BaseViewHolder" />

        <variable
            name="data"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
         android:layout_height="32dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/dp_15"
             android:orientation="horizontal">

            <com.flyco.roundview.RoundLinearLayout
                android:id="@+id/rv_yinyongbiaozhu1"

                android:layout_width="@dimen/margin_80"
                android:layout_weight="1"
                android:layout_height="32dp"
                android:layout_marginStart="@dimen/dp_10"
                app:rv_cornerRadius="2dp"
                app:rv_strokeColor="@color/line"
                app:rv_strokeWidth="1dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/tv_yinyongbiaozhu1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:text="@{data}"
                    android:singleLine="true"
                    android:hint="请输入"
                    android:textColor="@color/black_a7000000"
                    android:textSize="@dimen/sp_12"
                    tools:text="" />
            </com.flyco.roundview.RoundLinearLayout>
            <ImageView
                android:id="@+id/sb_yinyong_remove1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@mipmap/icon_remove"
                android:layout_gravity="center_vertical"
                 android:layout_marginLeft="@dimen/dp_8"
                />
        </LinearLayout>


    </LinearLayout>
</layout>